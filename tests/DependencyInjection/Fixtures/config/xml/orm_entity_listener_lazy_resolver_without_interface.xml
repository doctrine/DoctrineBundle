<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:doctrine="http://symfony.com/schema/dic/doctrine"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd
                        http://symfony.com/schema/dic/doctrine http://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <services>
        <service id="custom_resolver" class="Doctrine\ORM\Mapping\DefaultEntityListenerResolver" />

        <service id="entity_listener" class="EntityListener">
            <tag name="doctrine.orm.entity_listener" lazy="true" />
        </service>
    </services>

    <doctrine:config>
        <doctrine:dbal default-connection="default">
            <doctrine:connection name="default" dbname="db" />
        </doctrine:dbal>

        <doctrine:orm default-entity-manager="em1">
            <doctrine:entity-manager name="em1" entity-listener-resolver="custom_resolver" />
        </doctrine:orm>
    </doctrine:config>
</container>
